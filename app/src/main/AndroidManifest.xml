<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="frsf.isi.dam.delaiglesia.sendmeal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".NuevoPedido.ListaBusquedaParaNuevoPedido"></activity>
        <activity android:name=".NuevoPedido.ListaItemsParaNuevoPedido" />
        <activity android:name=".NuevoPedido.NuevoPedido" />
        <!--
         esto es necesario a partir del API 28, dado que en esta versiÃ³n del API se
                                                deshabilita por defecto el uso de HTTP, y solo se permite usar HTTPS
        -->
        <activity android:name=".ListaItems" />
        <activity android:name=".ListaBusqueda" />
        <activity android:name=".NuevoItem" />
        <activity
            android:name=".Home"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registrarse"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <service android:name=".MyIntentService" />
    </application>

</manifest>